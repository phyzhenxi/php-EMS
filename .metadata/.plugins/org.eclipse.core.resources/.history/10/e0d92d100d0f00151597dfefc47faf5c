<?php
require_once 'connect.php';
//把传递过来的信息入库，在入库之前对所有的信息进行校验
$username=$_POST['name'];
$password=$_POST['pwd'];
$insertsql="select * from user where username=$username";
if($query=mysql_query($insertsql)){
$data=mysql_fetch_assoc($query);
if($password===$data['password']){
	echo "<script>alert('success:登陆成功');window.location.href='emplist.php';</script>";
}else {
	echo "<script>alert('error:用户名或密码错误');window.location.href='index.php';</script>";
}
}else {
	echo "<script>alert('error:用户名或密码错误');window.location.href='index.php';</script>";
	
}
