<?php
//自增/自减运算符
header('content-type:text/html;charset=utf-8');

$i = 7;

echo $i++ , '<br/><br/>'; //先使用,后加减

//先输出7和两个<br/>后,再加1,结果为8

echo $i , '<br/><br/>';   //再使用时结果为8

////////////////////////////////////////////

$n = 5;

echo ++$n , '<br/><br/>'; //先加减,后使用,结果为6

echo $n , '<br/><br/>';

##############################################

//布尔型不支持自增/自减运算;

$m = TRUE;

++$m;

var_dump($m);

echo '<br/><br/>';

//////////////////////////////////////

$n = TRUE;

$n += 1; //原型 $n = $n + 1; 

var_dump($n);

echo '<br/><br/>';

/////////////////////////////////////

//NULL支持自增,但是不支持自减;

$p = NULL;

++$p;

var_dump($p);

$c = NULL;

--$c;

var_dump($c);

###############################################

//PHP继承Perl的风格,支持字符的自增操作,但是不支持自减操作;

$s = 'aa';

$s++;

echo $s;

$s = 'a8';

$s++;

echo $s;



























